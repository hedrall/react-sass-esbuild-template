{
  "name": "react-esbuild-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "repository": "https://github.com/hedrall/react-sass-esbuild-template",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently --prefix \"{time}\" -t \"HH:mm:ss\" -c \"bgCyan.bold,bgGreen.bold,bgGrey.bold,bgMagenta.bold\" -n \"esbuild,BrowserSync,Express\" \"npm run build:js:watch\" \"npm run browser:reload\" \"npm run serve:local\" \"npm run build:style:watch\"",
    "build:js": "node --require esbuild-register build.ts",
    "build:js:watch": "WATCH=true npm run build:js",
    "build:style": "node --require esbuild-register buildStyle.ts",
    "build:style:watch": "nodemon --watch src --ext scss --exec \"node -r esbuild-register buildStyle.ts\"",
    "serve:local": "node --require esbuild-register local.ts",
    "browser:reload": "wait-on public/index.js && browser-sync start --notify=false --proxy 'http://localhost:3030' --files 'public/*' --port 3000",
    "dev:jest": "jest . --watch --verbose",
    "format": "eslint . --fix",
    "create:component": "node --require esbuild-register scripts/createComponent.ts"
  },
  "keywords": ["template", "esbuild", "react", "sass"],
  "author": "hedrall",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/inquirer": "^9.0.1",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.6",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "browser-sync": "^2.27.10",
    "change-case": "^4.1.2",
    "concurrently": "^7.3.0",
    "esbuild": "^0.15.5",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "express": "^4.18.1",
    "glob": "^8.0.3",
    "inquirer": "^9.1.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "nodemon": "^2.0.19",
    "pluralize": "^8.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.4",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "dayjs": "^1.11.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "recoil": "^0.7.5",
    "type-fest": "^2.18.1"
  }
}
